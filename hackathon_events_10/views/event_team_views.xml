<odoo>
  <!-- Team Form View -->
  <record id="view_event_team_form" model="ir.ui.view">
    <field name="name">event.team.form</field>
    <field name="model">event.team</field>
    <field name="arch" type="xml">
      <form string="Team">
        <sheet>
          <group>
            <field name="name"/>
            <field name="event_id"/>
          </group>
          <group>
            <field name="member_ids">
              <tree editable="bottom">
                <field name="name"/>
                <field name="email"/>
                <field name="partner_id"/>
              </tree>
            </field>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Team Tree/List View -->
  <record id="view_event_team_tree" model="ir.ui.view">
    <field name="name">event.team.tree</field>
    <field name="model">event.team</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="event_id"/>
      </tree>
    </field>
  </record>

  <!-- Action for Teams -->
  <record id="action_event_team" model="ir.actions.act_window">
    <field name="name">Teams</field>
    <field name="res_model">event.team</field>
    <field name="view_mode">tree,form</field>
  </record>

  <!-- Menu Item under Events -->
  <menuitem id="menu_event_team_root"
            name="Teams"
            parent="event.event_main_menu"
            action="action_event_team"/>
</odoo>
