<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Distributor Purchase Order Form View -->
    <record id="view_distributor_purchase_order_form" model="ir.ui.view">
        <field name="name">distributor.purchase.order.form</field>
        <field name="model">distributor.purchase.order</field>
        <field name="arch" type="xml">
            <form string="Distributor Purchase Order">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" 
                            states="draft" class="btn-primary"/>
                    <button name="action_cancel" string="Cancel" type="object" 
                            states="draft,confirmed"/>
                    <button name="action_set_to_draft" string="Set to Draft" type="object" 
                            states="cancelled"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,delivered"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="distributor_id" options="{'no_create': True}"/>
                            <field name="order_date"/>
                        </group>
                        <group>
                            <field name="total_amount" widget="monetary"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Order Lines">
                            <field name="order_line_ids">
                                <tree string="Order Lines" editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="unit_price"/>
                                    <field name="subtotal"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes">
                            <field name="notes" placeholder="Add any notes here..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Distributor Purchase Order Tree View -->
    <record id="view_distributor_purchase_order_tree" model="ir.ui.view">
        <field name="name">distributor.purchase.order.tree</field>
        <field name="model">distributor.purchase.order</field>
        <field name="arch" type="xml">
            <tree string="Distributor Purchase Orders">
                <field name="name"/>
                <field name="distributor_id"/>
                <field name="order_date"/>
                <field name="total_amount"/>
                <field name="state" decoration-success="state=='confirmed'" 
                       decoration-info="state=='draft'" decoration-muted="state=='cancelled'"/>
            </tree>
        </field>
    </record>
    
    <!-- Action for Distributor Purchase Orders -->
    <record id="action_distributor_purchase_order" model="ir.actions.act_window">
        <field name="name">Distributor Purchase Orders</field>
        <field name="res_model">distributor.purchase.order</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first distributor purchase order!
            </p>
            <p>
                Distributors can create purchase orders for empty bottles here.
            </p>
        </field>
    </record>
    
    <!-- Menu Items -->
    <menuitem id="menu_oceana_distribution_root" name="Oceana Distribution" sequence="10"/>
    
    <menuitem id="menu_distributor_purchase_orders" 
              name="Purchase Orders" 
              parent="menu_oceana_distribution_root" 
              action="action_distributor_purchase_order" 
              sequence="10"/>

</odoo>