<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Task Category Form View -->
    <record id="view_task_category_form" model="ir.ui.view">
        <field name="name">task.category.form</field>
        <field name="model">task.category</field>
        <field name="arch" type="xml">
            <form string="Task Category">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_task_category)d"
                                type="action"
                                class="oe_stat_button"
                                icon="fa-tasks"
                                string="Tasks"/>
                        <field name="task_count" widget="statinfo" string="Number of Tasks"/>
                    </div>

                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="code"/>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                            <field name="color" widget="color"/>
                            <field name="icon"/>
                            <field name="default_priority"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Task Category Tree View -->
    <record id="view_task_category_tree" model="ir.ui.view">
        <field name="name">task.category.tree</field>
        <field name="model">task.category</field>
        <field name="arch" type="xml">
            <tree string="Task Categories" default_order="sequence">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="default_priority"/>
                <field name="task_count"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Task Category Search View -->
    <record id="view_task_category_search" model="ir.ui.view">
        <field name="name">task.category.search</field>
        <field name="model">task.category</field>
        <field name="arch" type="xml">
            <search string="Task Categories">
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>

                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>

                <group expand="0" string="Group By">
                    <filter string="Priority" name="group_priority" context="{'group_by': 'default_priority'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Task Category Action -->
    <record id="action_task_category" model="ir.actions.act_window">
        <field name="name">Task Categories</field>
        <field name="res_model">task.category</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_task_category_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first task category
            </p>
            <p>
                Categories help organize and classify different types of tasks.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_generic_task_root"
              name="Tasks"
              sequence="10"/>

    <menuitem id="menu_task_category"
              name="Categories"
              parent="menu_generic_task_root"
              action="action_task_category"
              sequence="20"/>

</odoo>
