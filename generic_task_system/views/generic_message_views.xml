<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Generic Message Form View -->
    <record id="view_generic_message_form" model="ir.ui.view">
        <field name="name">generic.message.form</field>
        <field name="model">generic.message</field>
        <field name="arch" type="xml">
            <form string="Message">
                <header>
                    <!-- âœ… REMOVED problematic buttons -->
                    <field name="is_scheduled" invisible="1"/>
                    <field name="is_expired" invisible="1"/>
                </header>

                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- Display-only stat buttons -->
                        <button class="oe_stat_button" icon="fa-users" disabled="1">
                            <field name="total_recipients" widget="statinfo" string="Recipients"/>
                        </button>

                        <button class="oe_stat_button" icon="fa-check" disabled="1">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="read_count"/> / <field name="total_recipients"/>
                                </span>
                                <span class="o_stat_text">Read</span>
                            </div>
                        </button>
                    </div>

                    <div class="oe_title">
                        <label for="title"/>
                        <h1>
                            <field name="title" placeholder="Message Title..."/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="message_type"/>
                            <field name="priority"/>
                            <field name="use_case"/>
                            <field name="tags"/>
                        </group>
                        <group>
                            <field name="sender_id" readonly="1"/>
                            <field name="scheduled_date"/>
                            <field name="expiry_date"/>
                        </group>
                    </group>

                    <group>
                        <field name="recipient_ids" widget="many2many_tags"/>
                    </group>

                    <notebook>
                        <page string="Content">
                            <field name="content" widget="html" placeholder="Write your message here..."/>
                        </page>

                        <page string="Related Records">
                            <group>
                                <group>
                                    <field name="task_id"/>
                                    <field name="partner_id"/>
                                </group>
                                <group>
                                    <field name="related_model"/>
                                    <field name="related_record_id"/>
                                    <field name="related_record_name" readonly="1"/>
                                </group>
                            </group>
                        </page>

                        <page string="Read Status">
                            <field name="read_status_ids">
                                <tree string="Read Status" create="false" delete="false">
                                    <field name="user_id"/>
                                    <field name="is_read"/>
                                    <field name="read_date"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Custom Data">
                            <group>
                                <field name="custom_data"
                                       widget="ace"
                                       options="{'mode': 'json'}"
                                       placeholder='{"key": "value"}'/>
                            </group>
                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Generic Message Tree View -->
    <record id="view_generic_message_tree" model="ir.ui.view">
        <field name="name">generic.message.tree</field>
        <field name="model">generic.message</field>
        <field name="arch" type="xml">
            <tree string="Messages"
                  decoration-danger="priority=='urgent'"
                  decoration-bf="unread_count &gt; 0"
                  decoration-muted="is_expired">
                <field name="title"/>
                <field name="message_type"/>
                <field name="priority" widget="priority"/>
                <field name="sender_id"/>
                <field name="total_recipients"/>
                <field name="read_count"/>
                <field name="unread_count"/>
                <field name="create_date"/>
                <field name="is_expired" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Generic Message Kanban View -->
    <record id="view_generic_message_kanban" model="ir.ui.view">
        <field name="name">generic.message.kanban</field>
        <field name="model">generic.message</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="title"/>
                <field name="message_type"/>
                <field name="priority"/>
                <field name="sender_id"/>
                <field name="unread_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click #{record.priority.raw_value == 'urgent' ? 'oe_kanban_card_danger' : ''}">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="title"/>
                                            <t t-if="record.unread_count.raw_value &gt; 0">
                                                <span class="badge badge-pill badge-info ml-2">
                                                    <t t-esc="record.unread_count.raw_value"/> unread
                                                </span>
                                            </t>
                                        </strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <span class="badge badge-secondary">
                                        <field name="message_type"/>
                                    </span>
                                    <div class="text-muted mt-2">
                                        From: <field name="sender_id"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="priority" widget="priority"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="create_date" widget="date"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Generic Message Search View -->
    <record id="view_generic_message_search" model="ir.ui.view">
        <field name="name">generic.message.search</field>
        <field name="model">generic.message</field>
        <field name="arch" type="xml">
            <search string="Messages">
                <field name="title"/>
                <field name="sender_id"/>
                <field name="recipient_ids"/>
                <field name="use_case"/>
                <field name="tags"/>

                <filter string="My Messages" name="my_messages" domain="[('recipient_ids', 'in', [uid])]"/>
                <filter string="Sent by Me" name="sent_by_me" domain="[('sender_id', '=', uid)]"/>

                <separator/>

                <filter string="Urgent" name="urgent" domain="[('priority', '=', 'urgent')]"/>
                <filter string="High Priority" name="high_priority" domain="[('priority', 'in', ['high', 'urgent'])]"/>

                <separator/>

                <group expand="0" string="Group By">
                    <filter string="Message Type" name="group_type" context="{'group_by': 'message_type'}"/>
                    <filter string="Priority" name="group_priority" context="{'group_by': 'priority'}"/>
                    <filter string="Sender" name="group_sender" context="{'group_by': 'sender_id'}"/>
                    <filter string="Use Case" name="group_use_case" context="{'group_by': 'use_case'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'create_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Generic Message Action -->
    <record id="action_generic_message" model="ir.actions.act_window">
        <field name="name">Messages</field>
        <field name="res_model">generic.message</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'search_default_my_messages': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">No messages yet</p>
            <p>Messages will appear here when they are sent to you.</p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_generic_message"
              name="Messages"
              parent="menu_generic_task_root"
              action="action_generic_message"
              sequence="20"/>

</odoo>