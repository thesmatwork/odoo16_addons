<odoo>
    <record id="view_sales_todo_tree" model="ir.ui.view">
        <field name="name">sales.todo.tree</field>
        <field name="model">sales.todo</field>
        <field name="arch" type="xml">
            <tree string="Sales Todos">
                <field name="title"/>
                <field name="priority"/>
                <field name="status"/>
                <field name="assigned_user_id"/>
                <field name="due_date"/>
                <field name="is_overdue"/>
            </tree>
        </field>
    </record>

    <record id="view_sales_todo_form" model="ir.ui.view">
        <field name="name">sales.todo.form</field>
        <field name="model">sales.todo</field>
        <field name="arch" type="xml">
            <form string="Sales Todo">
                <sheet>
                    <group>
                        <field name="title"/>
                        <field name="description"/>
                        <field name="priority"/>
                        <field name="status"/>
                        <field name="assigned_user_id"/>
                        <field name="due_date"/>
                        <field name="progress"/>
                        <field name="is_overdue" readonly="1"/>
                    </group>
                    <footer>
                        <button name="mark_in_progress" type="object" string="Mark In Progress" class="btn-primary" attrs="{'invisible': [('status','!=','pending')]}"/>
                        <button name="mark_completed" type="object" string="Mark Completed" class="btn-success" attrs="{'invisible': [('status','=','completed')]}"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_sales_todo" model="ir.actions.act_window">
        <field name="name">Sales Todos</field>
        <field name="res_model">sales.todo</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_sales_todo_root" name="Sales Todo"/>
    <menuitem id="menu_sales_todo_items" name="Todo Items" parent="menu_sales_todo_root" action="action_sales_todo"/>
</odoo>
